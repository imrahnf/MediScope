@model IEnumerable<MediScope.Models.TestResult>
@{
    Layout = "_Layout";
    ViewData["Title"] = "My Test Results";
}

<h2 class="fw-bold mb-4">My Test Results</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">@TempData["Message"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">You have no test results yet.</div>
}
else
{
    <div class="list-group">
        @foreach (var r in Model.Select((val, idx) => new { val, idx }))
        {
            var collapseId = $"result_{r.val.Id}_{r.idx}";
            <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <h5 class="mb-1">@r.val.TestName</h5>
                    <small class="text-muted">@r.val.DatePerformed.ToString("MM/dd/yyyy")</small>
                </div>
                <button class="btn btn-link p-0" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                    View Result
                </button>
                <div class="collapse mt-2" id="@collapseId">
                    <div class="card card-body">
                        <div class="row mb-2">
                            <div class="col-md-3"><strong>Doctor:</strong></div>
                            <div class="col-md-9">@r.val.Doctor?.Name</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3"><strong>Date Performed:</strong></div>
                            <div class="col-md-9">@r.val.DatePerformed.ToString("MMMM dd, yyyy")</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-3"><strong>Result:</strong></div>
                            <div class="col-md-9">
                                <div class="border rounded p-3 bg-light">@r.val.Result</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <a asp-action="DownloadTestResult" asp-route-id="@r.val.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-download"></i> Download as Text File
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
