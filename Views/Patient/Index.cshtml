@model IEnumerable<MediScope.Models.Appointment>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Patient Dashboard";
}
<h2>My Appointments</h2>

<table class="table">
    <thead>
    <tr><th>Date</th><th>Doctor</th><th>Status</th><th>Actions</th></tr>
    </thead>
    <tbody>
    @foreach(var a in Model)
    {
        <tr>
            <td>@a.Date</td>
            <td>@a.Doctor?.Name</td>
            <td>@a.Status</td>
            <td>
                @if(a.Status == "Scheduled")
                {
                    <form method="post" asp-controller="Appointment" asp-action="Cancel" style="display:inline">
                        <input type="hidden" name="appointmentId" value="@a.Id" />
                        <button class="btn btn-sm btn-danger" type="submit">Cancel</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Appointment" asp-action="Book">Book Appointment</a>