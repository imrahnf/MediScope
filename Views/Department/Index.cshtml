@model IEnumerable<MediScope.Models.Department>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Departments";
}

<h2 class="fw-bold mb-4">Departments</h2>

<a class="btn btn-primary mb-3" asp-action="Create">+ Add Department</a>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-primary">
    <tr>
        <th>Name</th>
        <th style="width: 180px;"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@d.Id"
                   class="btn btn-sm btn-warning">Edit</a>

                <form method="post" asp-action="Delete" asp-route-id="@d.Id"
                      style="display:inline-block">
                    <button class="btn btn-sm btn-danger"
                            onclick="return confirm('Delete department?');">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>