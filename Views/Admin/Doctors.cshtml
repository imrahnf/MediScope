@model IEnumerable<MediScope.Models.Doctor>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Manage Doctors";
}

<h2 class="fw-bold mb-4">Doctors</h2>

<a class="btn btn-primary mb-3" asp-action="CreateDoctor">+ Add Doctor</a>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-primary">
    <tr>
        <th>Name</th>
        <th>Specialty</th>
        <th>Department</th>
        <th style="width: 180px;"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.Name</td>
            <td>@d.Specialty</td>
            <td>@d.Department?.Name</td>
            <td>
                <a asp-action="EditDoctor" asp-route-id="@d.Id"
                   class="btn btn-sm btn-warning">Edit</a>

                <form method="post" asp-action="DeleteDoctor" asp-route-id="@d.Id"
                      style="display:inline-block">
                    <button class="btn btn-sm btn-danger"
                            onclick="return confirm('Delete doctor?');">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
