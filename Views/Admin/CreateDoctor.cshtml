@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Doctor";
}

<h2 class="fw-bold mb-4">Add Doctor</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post" asp-action="CreateDoctor">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input required class="form-control" name="name" />
    </div>

    <div class="mb-3">
        <label class="form-label">Specialty</label>
        <input required class="form-control" name="specialty" />
    </div>

    <div class="mb-3">
        <label class="form-label">Department</label>
        <select class="form-select" name="departmentId" required>
            @foreach (var dept in ViewBag.Departments)
            {
                <option value="@dept.Id">@dept.Name</option>
            }
        </select>
    </div>

    <button class="btn btn-success">Save</button>
    <a asp-action="Doctors" class="btn btn-secondary">Cancel</a>
</form>
