@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin Panel";
}

<div class="container py-5">

    <h2 class="fw-bold mb-4">
        <i class="bi bi-shield-lock"></i> Admin Panel
    </h2>

    <p class="lead mb-4">
        Welcome to the MediScope Admin System. Use the quick actions below to manage doctors, departments, and view analytics.
    </p>

    <div class="row g-4">

        <div class="col-md-4">
            <a asp-action="Dashboard" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-speedometer2 display-5 text-primary"></i>
                        <h5 class="mt-3 fw-bold">Analytics Dashboard</h5>
                        <p class="text-muted mb-0">View system usage, appointments, and feedback insights.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-action="Doctors" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-person-badge display-5 text-success"></i>
                        <h5 class="mt-3 fw-bold">Manage Doctors</h5>
                        <p class="text-muted mb-0">Add, edit or remove doctor accounts and assignments.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-controller="Department" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-diagram-3 display-5 text-warning"></i>
                        <h5 class="mt-3 fw-bold">Manage Departments</h5>
                        <p class="text-muted mb-0">Configure medical departments and assignments.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-controller="Resource" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-boxes display-5 text-info"></i>
                        <h5 class="mt-3 fw-bold">Resources</h5>
                        <p class="text-muted mb-0">Manage medical equipment and supplies data.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-action="Feedback" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-chat-dots display-5 text-danger"></i>
                        <h5 class="mt-3 fw-bold">Patient Feedback</h5>
                        <p class="text-muted mb-0">Review, audit, and moderate patient reviews.</p>
                    </div>
                </div>
            </a>
        </div>

    </div>

</div>
