@model MediScope.Models.Resource

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Resource";
}

<h2 class="fw-bold mb-4">Edit Resource</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post" asp-action="Edit" asp-route-id="@Model.Id">
    <div class="mb-3">
        <label>Name</label>
        <input name="name" class="form-control" value="@Model.Name" required />
    </div>

    <div class="mb-3">
        <label>Type</label>
        <input name="type" class="form-control" value="@Model.Type" required />
    </div>

    <div class="mb-3">
        <label>Quantity</label>
        <input name="quantity" type="number" class="form-control" value="@Model.Quantity" required />
    </div>

    <button class="btn btn-success">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>